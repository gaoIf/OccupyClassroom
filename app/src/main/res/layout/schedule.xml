<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20px"
    android:paddingLeft="20px"
    android:paddingRight="20px"
    android:paddingTop="20px"
    tools:context="com.example.gif.superclassroom_.classroomactivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height=  "wrap_content">

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="返回"
            android:textSize="20sp"
            android:id="@+id/courseback" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/weektime"
            android:text="星期"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/coursetime1"
            android:text="第一节"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />
        <TextView
            android:id="@+id/coursetime2"
            android:text="第二节"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />
        <TextView
            android:id="@+id/coursetime3"
            android:text="第三节"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/coursetime4"
            android:text="第四节"
            android:textSize="20sp"
            android:layout_weight="0.03"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"/>

    <ListView
        android:id="@+id/course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>